<div class="small-container center-block">
  <h2>Crear Cuenta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email,"Correo Electronico" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
     
     <div class="field">
      <%= f.label :name,"Nombre" %><br />
      <%= f.text_field :name%>
    </div>

     <div class="field">
      <%= f.label :paternal_surname,"Apellido Paterno" %><br />
      <%= f.text_field :paternal_surname %>
    </div>

     <div class="field">
      <%= f.label :maternal_surname,"Apellido Materno" %><br />
      <%= f.text_field :maternal_surname%>
    </div>

    <div class="field">
      <%= f.label :password, "ContraseÃ±a" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres como minimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmar ContraseÃ±a" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrase", class:"btn btn-primary "%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
